<% include ../__header %>
<div class="row container">
    <div class="col-md-12">
        <h3>Eliminar zombie</h3>
        <form action="/zombies/del/<%= zombie.id%>?_method=DELETE" method="POST">
            <div class="form-group">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="name" value="<%= zombie.name %>" disabled>
            </div>
            <div class="form-group">
                <label for="">Correo electronico</label>
                <input type="text" class="form-control" name ="email" value="<%= zombie.email %>" disabled>
            </div>
            <div class="form-group">
                <label for="">Tipo</label>
                <input type="text" class="form-control" name="type" value="<%= zombie.type %>" disabled>
            </div>
            <button class="btn btn-danger"><i class="fas fa-skull"></i> Eliminar zombie</button>
        </form>
    </div>
</div>
<% include ../__footer %>